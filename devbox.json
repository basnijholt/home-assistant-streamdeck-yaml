{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.1/.schema/devbox.schema.json",
  "packages": [
    "uv@latest",
    "python@3.12",
    "hidapi@latest",
    "libusb1@latest",
    "cairo@latest"
  ],
  "env": {
    "LD_LIBRARY_PATH": "$LD_LIBRARY_PATH:$DEVBOX_PACKAGES_DIR/lib"
  },
  "shell": {
    "init_hook": [
      "uv sync --all-extras"
    ],
    "scripts": {
      "start": "source .env && uv run python home_assistant_streamdeck_yaml.py",
      "dev": "source .env && uv run python home_assistant_streamdeck_yaml.py",
      "test": "uv run python -m pytest"
    }
  }
}
